{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Microdiag Sentinel",
    "version": "2.2.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "python",
            "cmd": "python",
            "args": true
          }
        ]
      },
      "notification": {
        "all": true
      },
      "process": {
        "all": true
      },
      "os": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$TEMP/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Â© 2025 Microdiag Solutions",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon.ico"
      ],
      "identifier": "com.microdiag.sentinel",
      "longDescription": "Agent de surveillance et maintenance automatique pour votre PC",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["../scripts/*"],
      "shortDescription": "Microdiag Sentinel Agent",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": null,
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": null,
          "sidebarImage": null,
          "license": null,
          "installMode": "currentUser",
          "languages": ["French"],
          "displayLanguageSelector": false
        }
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.microdiag.cybtek.fr/functions/v1/check-update?target={{target}}&current_version={{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQxMDRCREUxM0Y0QTg0NTkKUldSWmhFby80YjBFUWFMQmR6Z01OckdjMEs5cXlQcGdVWWlnSnNUUFdHVXRHTGMzUU1yd1EreG4K"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "minHeight": 600,
        "width": 1000,
        "minWidth": 800,
        "resizable": true,
        "title": "Microdiag Sentinel",
        "center": true,
        "decorations": true,
        "visible": true,
        "focus": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ]
  }
}
